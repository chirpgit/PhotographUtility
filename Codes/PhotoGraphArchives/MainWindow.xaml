<Window x:Class="PhotoGraphArchives.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoGraphArchives"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<ScrollViewer Margin="233,0,0,24">
			<ListView x:Name="lv_ImageFroperty" >
				<ListView.View>
					<GridView>
						<GridViewColumn Header="PropertyName" Width="120" DisplayMemberBinding="{Binding PropertyName}" />
						<GridViewColumn Header="PropertyType" Width="120" DisplayMemberBinding="{Binding PropertyType}" />
						<GridViewColumn Header="Value" Width="120" DisplayMemberBinding="{Binding Value}" />
					</GridView>
				</ListView.View>
			</ListView>
		</ScrollViewer>
		<Button x:Name="btn_AddFile" Content="添加文件" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Bottom" Width="75"/>
		<ListBox x:Name="lb_Files" Margin="0,0,0,24" HorizontalAlignment="Left" Width="228"/>

	</Grid>
</Window>
